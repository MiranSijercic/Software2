<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="450.0" prefWidth="415.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.addCustomerController">
   <children>
      <VBox layoutX="14.0" layoutY="36.0" prefHeight="350.0" prefWidth="100.0" spacing="34.0">
         <children>
            <Label text="NAME" />
            <Label layoutX="10.0" layoutY="10.0" text="ADDRESS" />
            <Label layoutX="10.0" layoutY="27.0" text="POSTAL CODE" />
            <Label layoutX="10.0" layoutY="44.0" text="COUNTRY" />
            <Label layoutX="10.0" layoutY="166.0" text="STATE/TERRITORY" />
            <Label layoutX="10.0" layoutY="218.0" text="PHONE" />
         </children>
      </VBox>
      <VBox layoutX="135.0" layoutY="36.0" prefHeight="310.0" prefWidth="246.0" spacing="25.0">
         <children>
            <TextField fx:id="nameField" />
            <TextField fx:id="addressField" layoutX="10.0" layoutY="10.0" />
            <TextField fx:id="postalCodeField" layoutX="10.0" layoutY="35.0" />
            <ComboBox fx:id="countryCombo" onAction="#onCountrySelect" prefWidth="150.0" />
            <ComboBox fx:id="stateCombo" layoutX="10.0" layoutY="210.0" onAction="#onStateSelect" prefWidth="150.0" />
            <TextField fx:id="phoneField" />
         </children>
      </VBox>
      <Button fx:id="exit" layoutX="219.0" layoutY="354.0" mnemonicParsing="false" onAction="#onExit" text="EXIT" />
      <Button fx:id="save" layoutX="165.0" layoutY="354.0" mnemonicParsing="false" onAction="#onSave" text="SAVE" />
   </children>
</AnchorPane>
